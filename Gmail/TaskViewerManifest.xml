<?xml version="1.0" encoding="UTF-8" ?>
<ApplicationManifest xmlns="http://schemas.google.com/ApplicationManifest/2009">

  <!-- Support info to show in the marketplace & control panel -->
  <Support>
    <!-- URL for application setup as an optional redirect during the install -->
    <Link rel="setup" href="http://_example.com_/google/setup.php?domain=www.appian.com" />

    <!-- URL for application configuration, accessed from the app settings
     page in the control panel -->
    <Link rel="manage" href="http://_example.com_/google/admin.php?domain=www.appian.com" />

    <!-- URL explaining how customers get support. -->
    <Link rel="support" href="http://_example.com_/google/support.php" />

    <!-- URL that is displayed to admins during the deletion process,
     to specify policies such as data retention, how to claim accounts, etc. -->
    <Link rel="deletion-policy" href="http://_example.com_/google/deletion-policy.php" />
  </Support>

  <!-- Name and description pulled from message bundles -->
  <Name>ViewTask</Name>
  <Description>View Task in a Gmail contextual gadget</Description>

  <!-- Show this link in Google's universal navigation for all users -->
  <Extension id="viewTaskNavLink" type="link">
    <Name>View Task</Name>
    <Url>http://example.com/home.php?from=google&domain=www.appian.com</Url>
  </Extension>

  <!-- Declare our OpenID realm so our app is white listed -->
  <Extension id="realm" type="openIdRealm">
    <Url>www.appian.com</Url>
  </Extension>

<!-- EXTRACTOR -->

<Extension id="TaskViewerExtractor" type="contextExtractor">
  <Name>View Task</Name>
  
  <Url>google.com:HttpLinkExtractor</Url>
  <Param name="task_url" value="https?://.*/tempo/tasks/task/-?[0-9]*"/>
  <Triggers ref="TaskViewerGadget"/
  <Scope ref="emailBody"/>
  <Container name="mail"/>
</Extension>

<!-- GADGET -->

<Extension id="TaskViewerGadget" type="gadget">
  <Name>View Task Contextual Gadget</Name>
  <Url>https://tjcarroll11.github.io/Gmail/ViewTaskSpec.xml</Url>
  <Container name="mail"/>
</Extension>

<!-- SCOPE -->

<Scope id="emailBody">
  <Url>tag:google.com,2010:auth/contextual/extractor/BODY</Url>
  <Reason>This application searches the message body of each email
  for a url to an Appian task</Reason>
</Scope>

</ApplicationManifest>
